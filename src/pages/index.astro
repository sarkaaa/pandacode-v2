---
import Layout from "../layouts/Layout.astro";
import SocialSites from "../components/SocialSites";
import ShortTile from "../components/ShortTile.astro";
import { SHORTS } from "./shorts.astro";
import { PROJECTS } from "./projects.astro";
import ProjectTile from "../components/ProjectTile.astro";
import BlogPosts from "../components/BlogPosts";


const LABELS = ["#frontend", "#accessibility", "#testing"];
---

<Layout>
  <section id="hero">
    <h1>
      <span class="font-roboto text-4xl md:text-5xl text-blue-400 dark:text-blue-100">Panda{`<`}<span class="text-red-400 dark:text-red-300">code</span>{`/>`}</span>
      <span class="sr-only">Welcome on Pandacode.cz</span>
    </h1>
		<div class="flex gap-4 flex-col md:flex-row">
			<div class="flex-3">
				<p>
					Welcome to my website! ðŸš€ This is my personal space on the web, a place
					where I share bits of my journey in web development. Nothing fancyâ€”just a
					place for creativity and learning. Take a look around and enjoy!
				</p>
			</div>
			<div class="flex-2">
				pandacode logo
			</div>
		</div>
  </section>
  <section id="about-me">
    <h2>About me</h2>
    <div class="flex gap-4 items-baseline flex-col md:flex-row">
      <div class="flex-2">photo</div>
      <div class="flex-3">
        <div>
          <p>
            Hi, I'm <strong>Å Ã¡rka</strong>, a <a href="#">frontend developer</a> based
            in the Czech Republic. I'm passionate about web development, accessibility,
            and design. I love creating beautiful and accessible websites that are
            fast and user-friendly. I'm always learning and experimenting with new
            technologies to improve my skills and stay up-to-date with the latest
            trends in web development.
          </p>
					<div class="flex gap-2 mt-4">
						{
							LABELS.map((label) => (
                <Fragment key={label}>
                  <span class="bg-[#f8f8f8] rounded-md px-2 py-1 text-[#05157f] font-medium">
                    {label}
                  </span>
                </Fragment>
							))
						}
					</div>
        </div>
        <div class="flex gap-4 mt-6">
          <SocialSites />
        </div>
      </div>
    </div>
  </section>
  <section id="latest-activity">
    <h2>Latest activity</h2>
		<div class="mb-12">
      <h3>Projects</h3>
      <div>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 md:gap-4">
					{
						PROJECTS.map((project, index) => {
              if (index < 2) {
                return <Fragment key={project.name}><ProjectTile index={index} {...project} /></Fragment>
              }
            })
					}
				</div>
        <!-- <div class="mt-6 flex justify-end"><a href="/projects">Check more projects</a></div> -->
      </div>
    </div>
    <div class="mb-12">
      <h3>Blog</h3>
      <div>
        <div class="flex flex-wrap gap-4 md:gap-4 flex-col sm:flex-row">
					<BlogPosts maxPosts={2} client:load />
				</div>
        <div class="mt-6 flex justify-end"><a href="/blog">Check more blogposts</a></div>
      </div>
    </div>
    <div class="mb-12">
      <h3>Shorts</h3>
      <div class="block">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-4">
					{
						SHORTS.map((short, index) => {
              if (index < 2) {
                return <Fragment key={short.title}><ShortTile {...short} /></Fragment>
              }
            })
					}
				</div>
        <div class="mt-6 flex justify-end"><a href="/shorts">Check more shorts</a></div>
      </div>
    </div>
  </section>
</Layout>
